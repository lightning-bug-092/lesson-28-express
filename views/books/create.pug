extend ../layout/layout1
block content
  h1 Create book
  form(method="post" enctype="multipart/form-data")
      .form-group
          label(for="title") Title book
          input.form-control#title(type="text" name="title" )
      .form-group
          label(for="description") Description book
          input.form-control#description(type="text" name="description")
      .form-group
          label(for="coverUrl") Cover Book:
          input#coverUrl(type="file" name="coverUrl")
      button.btn.btn-primary Create