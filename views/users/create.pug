extend ../layout/layout1
block content
  h1 Create user
  if(errors)
    each error in errors
      .alert.alert-danger=error
  form(method="post")
      .form-group
            label(for="name") Name
            input.form-control#name(type="text" name="name" )
      .form-group
            label(for="phoneNumber") Phone number
            input.form-control#phoneNumber(type="text" name="phoneNumber")
      .form-group
            label(for="mail") Mail
            input.form-control#mail(type="text" name="mail")
      .form-group
            label(for="password") Password
            input.form-control#password(type="text" name="password")
      button.btn.btn-primary Create